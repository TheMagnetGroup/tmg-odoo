<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="mass_sales_team_update_wizard_form_view" model="ir.ui.view">
            <field name="name">mass.sales.team.update.wizard.form.view</field>
            <field name="model">contact.sales.team.update.wizard</field>
            <field name="arch" type="xml">
                <form string="Update sales team">
                    <group colspan="4">
                        <field name="team_id" options="{'no_open':True,'no_create':True}"/>
                    </group>
                    <footer>
                        <button string="Update" name="action_validate" type="object" class="btn-primary"/>
                        <button string="cancel" class="btn-primary" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>