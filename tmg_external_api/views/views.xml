            <field name="res_model">tmg_external_api.tmg_reference</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_tmg_export_accounts" model="ir.actions.act_window">
            <field name="name">Export Accounts</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tmg_external_api.tmg_export_account</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
