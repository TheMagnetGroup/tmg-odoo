        <record id="tmg_external_api_menu_root" model="ir.ui.menu">
            <field name="active" eval="True"/>
            <field name="groups_id" eval="[(6, 0, [])]"/>
            <field name="name">External APIs</field>
            <field name="parent_id" eval="False"/>
            <field name="sequence">11</field>
            <field name="web_icon">fa fa-diamond,#f1c40f,#34495e</field>
        </record>

	    <record id="tmg_external_api_menu" model="ir.ui.menu">
            <field name="action" ref="action_tmg_external_api"/>
            <field name="active" eval="True"/>
            <field name="name">Logging</field>
            <field name="parent_id" ref="tmg_external_api_menu_root"/>
            <field name="sequence">2</field>
        </record>

        <record id="tmg_external_api_menu_promostandards" model="ir.ui.menu">
            <field name="action" ref="action_tmg_external_api_promostandards"/>
            <field name="active" eval="True"/>
