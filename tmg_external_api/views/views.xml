            <field name="res_model">product.export.account</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="tmg_product_export_accounts_menu" model="ir.ui.menu">
	        <field name="action" ref="action_tmg_product_export_accounts"/>
            <field name="active" eval="True"/>
            <field name="name">Product Export Accounts</field>
            <field name="parent_id" ref="sale.product_menu_catalog"/>
            <field name="sequence">3</field>
        </record>

