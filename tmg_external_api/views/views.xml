        <record id="tmg_external_api_menu_export" model="ir.ui.menu">
            <field name="action" ref="action_tmg_export_accounts"/>
            <field name="active" eval="True"/>
            <field name="name">Export Accounts</field>
            <field name="parent_id" ref="tmg_external_api_menu_root"/>
            <field name="sequence">1</field>
        </record>

       <record id="tmg_product_template_export_form_view" model="ir.ui.view">
            <field name="name">tmg.product.template.export.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
                    <page string="Export Accounts">
                        <group string="Export Accounts">
                            <field name="export_account_ids" widget="one2many_list" context="{'show_attribute': False}"
                                   modifiers="{'readonly':'false'}">
                                <tree editable="bottom">
                                    <field name="export_account_id" options="{'no_create_edit':True}"/>
                                    <field name="last_export_date" readonly="True"/>
                                    <field name="last_export_error" readonly="True"/>
                                    <field name="last_export_message" readonly="True"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>



