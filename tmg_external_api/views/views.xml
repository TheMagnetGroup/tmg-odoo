        <record model="ir.ui.view" id="view_tmg_api_promostandards_form">
	   		<field name="name">view_tmg_api_promostandards_form</field>
			<field name="model">tmg_external_api.promostandards</field>
			<field name="arch" type="xml">
				<form name="Promostandards">
                    <group>
					<field name="name"/>
                    <field name="debug"/>
                    <button name="test_button"
					string="Print Shipping Labels"
					type="object"
					/>
                    </group>
				</form>
	   		</field>
	    </record>

        <record model="ir.ui.view" id="view_tmg_export_accounts_tree">
	   		<field name="name">view_tmg_export_accounts_tree</field>
			<field name="model">tmg_external_api.tmg_export_account</field>
			<field name="arch" type="xml">
				<tree name="Export Account Fields" editable="top">
                    <field name="category"/>
					<field name="name"/>
                    <field name="accounting_id"/>
                    <field name="account_number"/>
					<field name="login"/>
					<field name="pwd"/>
					<field name="url"/>
                    <field name="xslt_file"/>
                    <field name="file_extension"/>
				</tree>
	   		</field>
	    </record>

        <record id="action_tmg_external_api" model="ir.actions.act_window">
            <field name="name">External API</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tmg_external_api.api_logging</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,pivot</field>
        </record>

