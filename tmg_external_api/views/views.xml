        <record model="ir.ui.view" id="view_tmg_logging_tree">
            <field name="name">view_tmg_api_tree</field>
            <field name="model">tmg_external_api.api_logging</field>
            <field name="arch" type="xml">
                <tree name="API Logs">
                    <field name="api_name"/>
                    <field name="partner_id"/>

                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_tmg_api_tree">
            <field name="name">view_tmg_promostandards_tree</field>
            <field name="model">tmg_external_api.promostandards</field>
            <field name="arch" type="xml">
                <tree name="API Logs">
                    <field name="name"/>
                    <field name="debug"/>

                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_tmg_reference_tree">
            <field name="name">view_tmg_reference_tree</field>
            <field name="model">tmg_external_api.tmg_reference</field>
            <field name="arch" type="xml">
                <tree name="Reference Fields" editable="top">
                    <field name="name"/>
                    <field name="value"/>
                    <field name="category"/>
                </tree>
            </field>
        </record>

