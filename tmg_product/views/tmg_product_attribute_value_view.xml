<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="product_template_attribute_value_view_tree_tmg_inherit" model="ir.ui.view">
            <field name="name">tmg.product.template.attribute.value.tree</field>
            <field name="model">product.template.attribute.value</field>
            <field name="inherit_id" ref="product.product_template_attribute_value_view_tree"/>
            <field name="arch" type="xml">
                <field name="price_extra" position="before">
                    <field name="pms_color" options="{'no_create': True, 'no_edit': True}"/>
                </field>
            </field>
        </record>

        <record id="tmg_product_attribute_value_tree_view" model="ir.ui.view">
            <field name="name">tmg.product.attribute.value.tree</field>
            <field name="model">product.attribute.value</field>
            <field name="inherit_id" ref="sale.variants_tree_view"/>
            <field name="arch" type="xml">
                <field name="html_color" position="after">
                    <field name="pms_color" options="{'no_create': True, 'no_edit': True}"/>
                </field>
            </field>
        </record>

        <record id="tmg_product_attribute_form_view" model="ir.ui.view">
            <field name="name">tmg.product.attribute.form</field>
            <field name="model">product.attribute</field>
            <field name="inherit_id" ref="sale.product_attribute_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='value_ids']/tree/field[@name='html_color']" position="after">
                    <field name="pms_color" options="{'no_create': True, 'no_edit': True}"/>
                </xpath>
            </field>
        </record>

        <record id="tmg_product_pms_color_tree_view" model="ir.ui.view">
            <field name="name">tmg.product.pms.color.tree</field>
            <field name="model">product.pms.color</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_product_pms_color" model="ir.actions.act_window">
            <field name="name">PMS Color Code</field>
            <field name="res_model">product.pms.color</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="tmg_product_pms_color_tree_view"/>
        </record>

        <menuitem id="menu_sales_product_pms_color" action="action_product_pms_color" sequence="9"
                  parent="sale.prod_config_main" groups="sales_team.group_sale_salesman"/>

        <menuitem id="menu_product_pms_color" action="action_product_pms_color" sequence="60"
                  parent="stock.menu_product_in_config_stock" groups="stock.group_stock_user"/>

    </data>
</odoo>