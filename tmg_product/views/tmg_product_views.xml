<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <act_window id="action_open_pricelist_inquiry_wizard"
            name="Pricelist Inquiry Wizard"
            src_model="product.template"
            res_model="product.pricelist.inquiry.wizard"
            target="new"
            view_mode="form"
            view_id="wizard_price_grid_inquiry"
            multi="False"
            context="{}"/>


        <record id="tmg_product_pricelist_item_form_view" model="ir.ui.view">
            <field name="name">tmg.product.pricelist.item.extras.form</field>
            <field name="model">product.pricelist.item</field>
            <field name="inherit_id" ref="product.product_pricelist_item_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="/form/group[1]" position="after">
                    <group>
                        <field name="extra_ids" widget="one2many_list" context="{'show_attribute': False}" modifiers="{'readonly':'false'}" attrs="{'invisible':[('applied_on', '!=', '1_product'),('applied_on', '!=', '0_product_variant')]}">
                            <tree string="Price Extras" editable="bottom">
                                <field name="attribute_id"/>
                                <field name="value_ids" widget="many2many_tags" options="{'no_create_edit': True}" domain="[('attribute_id', '=', attribute_id)]" context="{'default_attribute_id': attribute_id}"/>
                                <field name="price_extra"/>
                            </tree>
                        </field>
                    </group>
                </xpath>
                <xpath expr="//field[@name='date_end']" position="after">
                    <field name="discount_code"/>
                    <field name="published"/>
                </xpath>
            </field>
        </record>

        <record id="tmg_product_pricelist_item_tree_view" model="ir.ui.view">
            <field name="name">tmg_product_pricelist_items_tree</field>
            <field name="model">product.pricelist.item</field>
            <field name="arch" type="xml">
                <tree name="Pricelist Items">
                    <field name="pricelist_id"/>
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="product_tmpl_id"/>
                    <field name="categ_id"/>
                    <field name="min_quantity"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="discount_code"/>
                    <field name="published"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="tmg_product_pricelist_item_view_search">
            <field name="name">product.pricelist.item.search</field>
            <field name="model">product.pricelist.item</field>
            <field name="arch" type="xml">
                <search string="Products Pricelist Item Search">
                    <field name="pricelist_id" string="Pricelist Name"/>
                    <field name="name" string="Pricelist Item" filter_domain="['|','|','|',('product_id','ilike',self),('product_tmpl_id','ilike',self),('product_id.default_code','ilike',self),('product_tmpl_id.default_code','ilike',self)]"/>
                    <filter name="published" string="Published Pricing Only" domain="[('published','=',True)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Pricelist" name="pricelist" domain="[]" context="{'group_by':'pricelist_id'}"/>
                        <filter string="Product" name="product_template" domain="[]" context="{'group_by':'product_tmpl_id'}"/>
                        <filter string="Product Variant" name="product_id" domain="[]" context="{'group_by':'product_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_tmg_product_pricelist_items" model="ir.actions.act_window">
            <field name="name">Pricelist Items</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.pricelist.item</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="tmg_product.tmg_product_pricelist_item_view_search"/>
        </record>

        <record id="tmg_prouct_pricelist_items_menu" model="ir.ui.menu">
	        <field name="action" ref="action_tmg_product_pricelist_items"/>
            <field name="active" eval="True"/>
            <field name="name">Pricelist Items</field>
            <field name="parent_id" ref="sale.product_menu_catalog"/>
            <field name="sequence">3</field>
        </record>

        <record id="tmg_sale_order_view_tree" model="ir.ui.view">
            <field name="name">tmg.sale.order.view.tree</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree/field[@name='product_uom_qty']" position="after">
                    <field name="price_at_qty"/>
                </xpath>
            </field>
        </record>

        <record id="tmg_product_template_only_form_view" model="ir.ui.view">
            <field name="name">tmg.product.template.only.form.view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <button name="action_open_quants" position="before">
                    <button name="%(action_open_pricelist_inquiry_wizard)d" type="action" string="Pricing" class="oe_stat_button" icon="fa-dollar"/>
                </button>
            </field>
        </record>

        <record id="tmg_product_template_form_view" model="ir.ui.view">
            <field name="name">tmg.product.template.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <field name="categ_id" position="after">
                    <field name="product_tags_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    <field name="product_style_number" />
                    <field name="brand"/>
                </field>
                <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
                    <page name="additional_data" string="Additional Data" attrs="{'invisible': [('sale_ok', '=', False)]}">
                        <group>
                            <group string="Dimensions">
                                <field name="width"/>
                                <field name="height"/>
                                <field name="depth"/>
                            </group>
                            <group string="Miscellaneous">
                                <field name="primary_material"/>
                                <field name="market_introduction_date"/>
                                <field name="warehouses" widget="many2many_tags"/>
                            </group>
                        </group>
                        <group string = "Decoration Methods">
                            <field name="decoration_method_ids" widget="one2many_list" context="{'show_attribute': False}"
                                   modifiers="{'readonly':'false'}" nolabel="1">
                                <tree editable="bottom">
<!--                                    <field name="decoration_method_id" options="{'no_create_edit':True}"-->
<!--                                            domain="[('product_tmpl_id.id','=',parent.id),('attribute_id.category','=','decoration')]"-->
<!--                                            />-->
                                    <field name="decoration_method_id" options="{'no_create_edit':True}"
                                            domain="[('attribute_id.category','=','decoration')]"
                                            />
                                    <field name="prod_time_lo"/>
                                    <field name="prod_time_hi"/>
                                    <field name="pms"/>
                                    <field name="full_color"/>
                                    <field name="max_colors"/>
                                    <field name="number_sides"/>
                                    <field name="quick_ship"/>
                                    <field name="quick_ship_prod_days"/>
                                    <field name="quick_ship_max"/>
                                </tree>
                            </field>
                        </group>
                        <group string="Decoration Areas">
                            <field name="decoration_area_ids" widget="one2many_list" context="{'show_attribute': False}"
                                   modifiers="{'readonly':'false'}" nolabel="1">
                                <tree editable="bottom">
<!--                                    <field name="decoration_area_id" options="{'no_create_edit':True}"-->
<!--                                            domain="[('product_tmpl_id.id','=',parent.id),('attribute_id.category','=','location')]"-->
<!--                                            />-->
                                    <field name="decoration_area_id" options="{'no_create_edit':True}"
                                            domain="[('attribute_id.category','=','location')]"
                                            />
<!--                                    <field name="decoration_method_id" options="{'no_create_edit':True}"-->
<!--                                            domain="[('product_tmpl_id.id','=',parent.id)]"-->
<!--                                            />-->
                                    <field name="decoration_method_id" options="{'no_create_edit':True}"
                                            domain="[('attribute_id.category','=','decoration')]"
                                            />
                                    <field name="height"/>
                                    <field name="width"/>
                                    <field name="shape"/>
                                    <field name="diameter"/>
                                    <field name="default_decoration"/>
                                </tree>
                            </field>
                        </group>
                        <group string="Additional Charges">
                            <field name="addl_charge_product_ids" widget="one2many_list" context="{'show_attribute': False}"
                                   modifiers="{'readonly':'false'}" nolabel="1">
                                <tree editable="bottom">
                                    <field name="addl_charge_product_id" options="{'no_create_edit':True}"
                                            domain="[('type','in',['service','consu']),('id','!=',parent.id)]"/>
<!--                                    <field name="decoration_method_ids" options="{'no_create_edit':True}"-->
<!--                                            widget="many2many_tags"-->
<!--                                            domain="[('product_tmpl_id.id','=',parent.id),('attribute_id.category','=','decoration')]"-->
<!--                                            />-->
                                    <field name="decoration_method_ids" options="{'no_create_edit':True}"
                                            widget="many2many_tags"
                                            domain="[('attribute_id.category','=','decoration')]"
                                            />
                                    <field name="charge_type"/>
                                    <field name="charge_yuom"/>
                                    <field name="repeat_product_id"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                    <page string="Data Errors" attrs="{'invisible': [('data_errors', '=', False)]}">
                        <group>
                            <field name="data_errors"/>
                        </group>
                    </page>
                </xpath>
                <xpath expr="//group[@name='extra_images']" position="after">
                    <group string="Website Description and Keywords">
                        <field name="website_description"/>
                        <field name="website_meta_keywords"/>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="tmg_product_product_view_tree" model="ir.ui.view">
            <field name="name">tmg.product.product.tree.view</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="arch" type="xml">
                <field name="lst_price" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
            </field>
        </record>

        <record id="tmg_product_attribute_form" model="ir.ui.view">
            <field name="name">tmg.product.attribute.form</field>
            <field name="model">product.attribute</field>
            <field name="inherit_id" ref="product.product_attribute_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='create_variant']" position="after">
                    <field name="category"/>
                </xpath>
            </field>
        </record>

        <record id="tmg_web_category_form" model="ir.ui.view">
            <field name="name">tmg.web.category.form</field>
            <field name="model">product.public.category</field>
            <field name="inherit_id" ref="website_sale.product_public_category_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='parent_id']" position="after">
                    <field name="asi_category_id" domain="[('external_source','=','asi')]"/>
                    <field name="sage_category_id" domain="[('external_source','=','sage')]"/>
                </xpath>
            </field>
        </record>

        <record id="tmg_product_external_categories_tree_view" model="ir.ui.view">
            <field name="name">tmg_product_external_categories_tree</field>
            <field name="model">product.external.categories</field>
            <field name="arch" type="xml">
                <tree name="External Categories">
                    <field name="name"/>
                    <field name="external_source"/>
                    <field name="external_id"/>
                </tree>
            </field>
        </record>

        <record id="action_tmg_product_external_categories" model="ir.actions.act_window">
            <field name="name">External Categories</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.external.categories</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="tmg_product_external_categories_menu" model="ir.ui.menu">
	        <field name="action" ref="action_tmg_product_external_categories"/>
            <field name="active" eval="True"/>
            <field name="name">External Categories</field>
            <field name="parent_id" ref="website_sale.menu_product_settings"/>
            <field name="sequence">3</field>
        </record>

        <record id="tmg_product_packing_tree" model="ir.ui.view">
            <field name="name">tmg.product.packaging.tree</field>
            <field name="model">product.packaging</field>
            <field name="inherit_id" ref="product.product_packaging_tree_view2"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="max_weight"/>
                    <field name="length"/>
                    <field name="width"/>
                    <field name="height"/>
                </xpath>
            </field>
        </record>

        <record id="tmg_product_packing_form" model="ir.ui.view">
            <field name="name">tmg.product.packaging.form</field>
            <field name="model">product.packaging</field>
            <field name="inherit_id" ref="product.product_packaging_form_view2"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='qty']" position="after">
                    <group name="dimensions" string="Dimensions">
                        <field name="max_weight"/>
                        <field name="length"/>
                        <field name="width"/>
                        <field name="height"/>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="tmg_product_deco_methods_tree" model="ir.ui.view">
            <field name="name">tmg.product.deco.method.tree</field>
            <field name="model">product.template.decorationmethod</field>
            <field name="arch" type="xml">
                <tree name="Product Template Decoration Methods">
                    <field name="product_tmpl_id"/>
                    <field name="decoration_method_id"/>
                    <field name="prod_time_lo"/>
                    <field name="prod_time_hi"/>
                    <field name="quick_ship"/>
                    <field name="quick_ship_prod_days"/>
                    <field name="quick_ship_max"/>
                    <field name="number_sides"/>
                    <field name="pms"/>
                    <field name="full_color"/>
                    <field name="max_colors"/>
                </tree>
            </field>
        </record>

        <record id="action_tmg_product_template_deco_methods" model="ir.actions.act_window">
            <field name="name">Product Decoration Methods</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.template.decorationmethod</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="tmg_product_template_deco_methods" model="ir.ui.menu">
	        <field name="action" ref="action_tmg_product_template_deco_methods"/>
            <field name="active" eval="True"/>
            <field name="name">Product Decoration Methods</field>
            <field name="parent_id" ref="sale.product_menu_catalog"/>
            <field name="sequence">3</field>
        </record>

        <record id="tmg_product_deco_areas_tree" model="ir.ui.view">
            <field name="name">tmg.product.deco.area.tree</field>
            <field name="model">product.template.decorationarea</field>
            <field name="arch" type="xml">
                <tree name="Product Template Decoration Areas">
                    <field name="product_tmpl_id"/>
                    <field name="decoration_area_id"/>
                    <field name="decoration_method_id"/>
                    <field name="height"/>
                    <field name="width"/>
                    <field name="shape"/>
                    <field name="diameter"/>
                    <field name="dimensions"/>
                    <field name="default_decoration"/>
                </tree>
            </field>
        </record>

        <record id="action_tmg_product_template_deco_areas" model="ir.actions.act_window">
            <field name="name">Product Decoration Areas</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.template.decorationarea</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="tmg_product_template_deco_areas" model="ir.ui.menu">
	        <field name="action" ref="action_tmg_product_template_deco_areas"/>
            <field name="active" eval="True"/>
            <field name="name">Product Decoration Areas</field>
            <field name="parent_id" ref="sale.product_menu_catalog"/>
            <field name="sequence">3</field>
        </record>

        <record id="tmg_product_action_build_xml" model="ir.actions.server">
            <field name="name">Build Standard XML</field>
            <field name="model_id" ref="model_product_template"/>
            <field name="state">code</field>
            <field name="code">record._build_std_xml()</field>
        </record>

        <record id="tmg_product_action_export_product_data" model="ir.actions.server">
            <field name="name">Export Product Data</field>
            <field name="model_id" ref="model_product_template"/>
            <field name="state">code</field>
            <field name="code">record._export_product_data()</field>
        </record>

        <record id="tmg_product_template_kanban_price_view" model="ir.ui.view">
            <field name="name">tmg.product.template.kanban.price.view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="stock.product_template_kanban_stock_view"/>
            <field name="arch" type="xml">
                <xpath expr="//ul" position="inside">
                    <li t-if="record.type.raw_value == 'product'">Ala Net: <field name="ala_net"/></li>
                </xpath>
            </field>
        </record>

        <record id="tmg_product_template_price_tree_inherit" model="ir.ui.view">
            <field name="name">tmg.product.template.price.tree.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="stock.view_stock_product_template_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='list_price']" position="replace">
                    <field name="ala_net"/>
                </xpath>
            </field>
        </record>

        <record id="view_tmg_product_template_search" model="ir.ui.view">
            <field name="name">view.tmg.product.template.search</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_search_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='categ_id']" position="after">
                    <field name="decoration_method_ids" string="Decoration Method" filter_domain="[('decoration_method_ids.decoration_method_id.name','ilike',self)]"/>
                </xpath>
                <xpath expr="//field[@name='name']" position="replace">
                    <field name="name" string="Product" filter_domain="['|', '|','|', ('product_variant_ids.default_code', 'ilike', self),('name', 'ilike', self), ('barcode', 'ilike', self), ('product_style_number', 'ilike', self)]"/>
                </xpath>
            </field>
        </record>

        <record id="view_tmg_product_search" model="ir.ui.view">
            <field name="name">view.tmg.product.search</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_search_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="decoration_method_ids" string="Decoration Method" filter_domain="[('decoration_method_ids.decoration_method_id.name','ilike',self)]"/>
                </xpath>
            </field>
        </record>

        <record id="tmg_product_pricelist_form" model="ir.ui.view">
            <field name="name">tmg.product.pricelist.form</field>
            <field name="model">product.pricelist</field>
            <field name="inherit_id" ref="product.product_pricelist_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="default_catalog_pricelist"/>
                    <field name="default_net_pricelist"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
