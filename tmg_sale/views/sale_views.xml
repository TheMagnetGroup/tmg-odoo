<odoo>
  <data>
    <record id="view_sales_order_filter_custref" model="ir.ui.view">
            <field name="name">sale.order.list.select.custref</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_sales_order_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='team_id']" position="after">
                    <field name="client_order_ref" string="Customer Reference"/>
                </xpath>


            </field>
        </record>
        <act_window id="ship_date_assign_action"
                     key2="client_action_multi"
                     name="Update Ship Date"
                     res_model="portal.ship.assign"
                     src_model="sale.order"
                     multi="False"
                     context="{}"
                     view_mode="form" target="new" view_type="form" view_id="ship_date_assign_wizard" />

      <record id="sale_form_view_main_inherit" model="ir.ui.view">
      <field name="name">sale.order.form.main.inherit</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form" />
      <field name="arch" type="xml">


          <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='order_lines']/field[@name='order_line']/form[1]/group[1]/group[1]/field[@name='product_id']" position="after">

                    <field name="quick_ship" />

                </xpath>
        <xpath expr="//button[@name='action_done']" position="after">
                    <button name="%(ship_date_assign_action)d" type="action" string="Update Ship Date"  attrs="{'invisible': [('state', 'not in', ['sale'])]}"/> />
                </xpath>

          <xpath expr="//field[@name='carrier_id']" position="after">
                    <field name="quick_ship" string="Quick Ship" readonly="1"/>
                </xpath>
      </field>
   </record>
  </data>
</odoo>