<odoo>
    <data>

        <record id="tmg_project_task_view_kanban" model="ir.ui.view">
            <field name="name">tmg.project.task.kanban</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_kanban"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="replace">
                    <field name="name"/> (#<field name="id"/>)
                </xpath>
            </field>
        </record>

        <record id="tmg_project_task_view_tree" model="ir.ui.view">
            <field name="name">tmg.project.task.tree</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_tree2"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="replace">
                    <field name="display_name"/>
                </xpath>
            </field>
        </record>

        <record id="tmg_project_task_view_form" model="ir.ui.view">
            <field name="name">tmg.project.task.form</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='project_id']" position="after">
                    <field name="id"/>
                </xpath>
                <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
                    <page name="Attachments" string="Attachments">
                        <field name="attachment_ids" attrs="{}">
                            <tree class="o_documents_list_view" create="false" edit="false">
                                <field name="type" invisible="1"/>
                                <field name="thumbnail" options="{'size':[90,90]}" widget="image"/>
                                <field name="datas" widget="binary" filename="datas_fname" attrs="{'invisible':[('type','=','url')]}"/>
                                <field name="datas_fname" invisible="1" attrs="{'invisible':[('type','=','url')]}" class="oe_inline oe_right"/>
                                <field name="url" widget="binary" filename="datas_fname" attrs="{'invisible':[('type','=','binary')]}"/>
                                <field name="write_uid"/>
                                <field name="create_date"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="tmg_project_task_view_search" model="ir.ui.view">
            <field name="name">tmg.project.task.search</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_search_form"/>
            <field name="arch" type="xml">
                <xpath expr="//search/field[@name='name']" position="after">
                    <field name="id"/>
                </xpath>
            </field>
        </record>

        <record id="tmg_project_view_form" model="ir.ui.view">
            <field name="name">tmg.project.view.form</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='misc']" position="after">
                    <group name="Defaults">
                        <field name="dft_task_description"/>
                    </group>
                </xpath>
            </field>
        </record>
  </data>
</odoo>